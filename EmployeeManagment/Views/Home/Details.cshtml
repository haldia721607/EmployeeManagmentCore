@model Employee
@{
    ViewBag.Title = "Employee Details";
    var photoPath = "~/img/" + (Model.PhotoPath ?? "no-image.jpg");
}


<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Name</h1>
            </div>
            <div class="card-body text-center">
                <img class="card-img-top imgCss" src="@photoPath" asp-append-version="true" />
                <h4>Employee Id : @Model.Id</h4>
                <h4>Nmae : @Model.Email</h4>
                <h4> Department : @Model.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary m-1">Back</a>
                <a asp-controller="Home" asp-action="Edit" asp-route-id="@Model.EncryptedId" class="btn btn-primary m-1">Edit</a>
                <a asp-controller="Home" asp-action="Delete" asp-route-id="@Model.EncryptedId" class="btn btn-danger m-1">Delete</a>
            </div>
        </div>
    </div>
</div>